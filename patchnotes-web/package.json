    "test:coverage": "vitest run --coverage",
    "knip": "knip"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md,html}": "prettier --write"
  },
  "dependencies": {
