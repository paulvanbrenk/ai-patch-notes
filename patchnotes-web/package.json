    "@tanstack/react-router": "^1.159.5",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-error-boundary": "^6.1.0",
    "react-markdown": "^10.1.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/router-plugin": "^1.159.5",
    "@testing-library/dom": "^10.4.1",
